<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:padding="16dp">

    <TableRow>
        <TextView
            android:text="Chuyển đổi năm dương lịch"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_span="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <TextView android:text="Năm dương lịch:" />
        <EditText
            android:id="@+id/editNamDuong"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btnChuyenDoi"
            android:text="Chuyển đổi"
            android:layout_span="2" />
    </TableRow>

    <TableRow>
        <TextView android:text="Năm âm lịch:" />
        <TextView
            android:id="@+id/txtNamAm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFF99"
            android:padding="8dp"/>
    </TableRow>
</TableLayout>
